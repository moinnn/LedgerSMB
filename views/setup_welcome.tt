
<div>
  <?lsmb IF completed ?>
  <div class="status <?lsmb params.status ?>">
    <?lsmb IF params.completed == 'create-company' && params.status == 'success' ?>
      Successfully created <?lsmb database ?>
    <?lsmb END ?>
  </div>
  <?lsmb END ?>
  <div class="dashboard">dashboard</div>
  <div class="database-list">
    <h1>list of databases</h1>
    <table>
      <caption>databases</caption>
      <tbody>
      <tr>
        <td><form method="POST"
                  action="./create-company">
              <input name="database" type="text" data-dojo-type="dijit/form/TextBox" />
              <button type="submit"
                      data-dojo-type="dijit/form/Button">+</button></form>
        </td>
      </tr>
      <?lsmb FOR db IN databases ?>
      <tr>
          <?lsmb IF db == database ?>
          <td class="selected-database"><a href="?database=<?lsmb db | url ?>"><?lsmb db | html ?></a></td>
          <?lsmb ELSE ?>
          <td><a href="?database=<?lsmb db | uri ?>"><?lsmb db | html ?></a></td>
          <?lsmb END ?>
      </tr>
      <?lsmb END ?>
      </tbody>
    </table>
  </div>
  <?lsmb IF database ?>
  <div class="user-list">
    <h1>list of users</h1>
    <table>
      <caption>users</caption>
      <tbody>
      <tr>
        <td><form method="POST"
                  action="./create-user">
              <input type="text" data-dojo-type="dijit/form/TextBox" />
              <button type="submit"
                      data-dojo-type="dijit/form/Button">+</button>
            </form>
        </td>
      </tr>
      <?lsmb FOR user IN users ?>
        <tr>
          <td>
            <a href="./edit-user?database=<?lsmb database | uri ?>&user=<?lsmb user.id | uri ?>"><?lsmb user.username | html ?></a>
          </td>
        </tr>
      <?lsmb END ?>
      </tbody>
    </table>
  </div>

  <div class="user-list">
    <h1>list of templates</h1>
    <form method="POST" action="./load-templates">
    <table>
      <caption>templates</caption>
      <tbody>
      <?lsmb FOR template IN templates ?>
        <tr>
          <td>
            <input type="radio" id="template-<?lsmb template | html ?>"
                   name="template" data-dojo-type="dijit/form/RadioButton" />
            <label for="template-<?lsmb template | html ?>"><?lsmb template |html ?></label>
          </td>
        </tr>
      <?lsmb END ?>
      </tbody>
    </table>
    <button type="submit" data-dojo-type="dijit/form/Button">Load</button>
    </form>
  </div>

  <?lsmb END ?>


</div>